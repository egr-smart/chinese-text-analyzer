{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["apps/backend/src/*"],
      "@frontend/*": ["apps/frontend/src/*"],
      "@shared/*": ["packages/shared/src/*"]
    }
  },
  "include": ["apps/**/*"],
  "exclude": ["node_modules", "dist"]
}
